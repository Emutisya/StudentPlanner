<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddJournalActivity">
<com.google.android.material.appbar.MaterialToolbar
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:title=" "
    android:elevation="1dp">

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_arrow_back_ios_24"
        android:background="@android:color/transparent"
        android:layout_marginRight="12dp"
        android:tint="@color/colorBlack"
        android:onClick="cancelJournal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="New Journal Entry"
        android:textColor="#673AB7"
        android:textSize="18sp"
        android:fontFamily="@font/font"/>


</com.google.android.material.appbar.MaterialToolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp"
            android:layout_marginTop="6dp"
            >
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:id="@+id/imgAddJournal"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Select Photo"
                android:layout_marginBottom="20dp"
                android:textColor="#FF5722"
                android:gravity="center_horizontal"
                android:onClick="changePhoto"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tell Us About Your Day..."
                android:layout_marginBottom="20dp"
                android:textColor="#673AB7"
                android:gravity="center_horizontal"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:inputType="textImeMultiLine"
                android:gravity="left"
                android:textSize="15dp"
                android:background="@drawable/txt_background"
                android:padding="8dp"
                android:id="@+id/txtAboutAddJournal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="How did this events make you feel?"
                android:layout_marginBottom="20dp"
                android:textColor="#673AB7"
                android:gravity="center_horizontal"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="textImeMultiLine"
                android:gravity="left"
                android:textSize="15dp"
                android:background="@drawable/txt_background"
                android:padding="8dp"
                android:id="@+id/txtFeelingsAddJournal"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                    android:text="Give a tag for better socialization"
                android:layout_marginBottom="20dp"
                android:textColor="#673AB7"
                android:gravity="center_horizontal"
                />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:inputType="textImeMultiLine"
                android:gravity="left"
                android:textSize="15dp"
                android:background="@drawable/txt_background"
                android:padding="8dp"

                android:id="@+id/txtTagAddJournal"/>


            <Button
                android:id="@+id/btnAddJournal"
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:layout_centerHorizontal="true"
android:layout_marginTop="12dp"
                android:background="@drawable/button_rectangle_pink"
                android:text="ADD JOURNAL ENTRY"
                android:textSize="20sp" />


</LinearLayout>

    </ScrollView>

</LinearLayout>